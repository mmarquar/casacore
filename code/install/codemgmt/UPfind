set script = "UPfind"
set usage = 'Usage: UPfind [-c] [-g] <typ>'
#
# UPfind script (must have x allowed)
# Get all files that have to be updated according to a grep -E rule
# All .cc, .h and template files are scanned, or the .g if -g given
# The file list will be in <typ>.raw
# <typ>.found will have the list without user selected
# removals.
#
# See UPinfo for details
#
# Get general info
#
set x = "`which UPinfo`"
if (-x "$x") then
   set uppath = $x:h
else
   set x = ( $AIPSPATH )
   set uppath = $x[1]
endif
unset x
source $uppath/UPinfo
if (! $ok) exit 1
#
# Get specific data
#
if (! -r $ldir/${tp}.up1) then
   touch $ldir/${tp}.up1
   echo "Specify grep -E expression(s) to find files"
   echo 'Examples: /Measures/((MUString)|(MVAngle)|(MVTime)|(RotM)|Q|(Un))'
   echo '      or: [(][^(]*[*] *[)][ \t]*0'
   echo 'Multi-line expressions will be ORed'
   while (1)
	echo -n "Find expression: "
	set x = "$<"
	if ("$x" == "") break
	echo "$x" >> $ldir/${tp}.up1
   end
   unset x
endif

if (! -r $ldir/${tp}.rm) then
   echo "Specify grep pattern for files to be removed from list found."
   echo "Example: [/]glish[/]"
   echo tmplinst >! $ldir/${tp}.rm
   while (1)
	 echo -n "Remove pattern: "
	 set x = "$<"
	 if ("$x" == "") break
	 echo "$x" >> $ldir/${tp}.rm
   end
   unset x
endif

if (-z $ldir/${tp}.up1) then
   echo "No ${tp} up1 file created"
   exit (1)
endif

cd $dir/code
echo "Starting find..."
if ($gls) then
   find . -name '*.g' \
	-exec $upgrep -l -E -f $ldir/${tp}.up1 {} \; \
	      >! $ldir/${tp}.raw 
else
   find . \( \( -name '*.h' -o -name '*.cc' \) -o -name 'templates' \) \
	-exec $upgrep -l -E -f $ldir/${tp}.up1 {} \; \
	      >! $ldir/${tp}.raw 
endif
cd $ldir

set a = ( `wc $ldir/${tp}.raw` )
echo $a[1] files found in ${tp}.raw
unset a

echo "Starting selected removal..."
$upgrep -v -f $ldir/${tp}.rm $ldir/${tp}.raw >! $ldir/${tp}.found

set a = ( `wc ${tp}.found` )
echo $a[1] files left in ${tp}.found
unset a

exit 0






